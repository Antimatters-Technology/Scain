# Scain Platform Environment Configuration

# Backend Server Configuration
PORT=8081
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./backend/scain.db

# Blockchain Configuration (Hyperledger Fabric)
ENABLE_BLOCKCHAIN=false
FABRIC_CCP_PATH=./blockchain/network/connection-profile.yaml
FABRIC_WALLET_PATH=./blockchain/network/wallet
FABRIC_USER_ID=appUser
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=scain

# MQTT Configuration (for ESP32 device communication)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_TOPIC_PREFIX=scain/

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
API_RATE_LIMIT=100
REQUEST_SIZE_LIMIT=10mb

# Development Configuration
DEBUG=true
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000
