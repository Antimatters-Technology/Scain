{
  "name": "scain",
  "version": "1.0.0",
  "private": true,
  "description": "Low-cost food traceability MVP with ESP32, blockchain, and web dashboard",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "build": "npm run build --prefix frontend",
    "start": "npm run start --prefix frontend",
    "lint": "npm run lint --prefix frontend",
    "install:frontend": "npm install --prefix frontend",
    "test:go": "cd chaincode && go test ./...",
    "test:chaincode": "cd src/tests && go test ./...",
    "devnet": "make devnet",
    "flash": "make flash"
  },
  "keywords": [
    "food-traceability",
    "blockchain",
    "esp32",
    "iot",
    "fsma",
    "sfcr"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/scain.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 